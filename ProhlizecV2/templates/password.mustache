<div class="m-2 p-2">
    <div class="w-50 float-end">
        <div class="m-2 p-4 w-100 d-flex justify-content-center text-center">
            <div style="width: 8em; height: 8em" class="shrinky-box glow-hover-outer d-flex align-items-center text-center">
                <span style="font-size: 5em" class="display-1 text-center w-100 glow-text"><i class="bi bi-person"></i></span>
            </div>
        </div>
        <div class="text-center">
            <span style="font-size: 2em" class="display-5">Logged in as '{{user.username}}'</span>
        </div>
    </div>
    <h1 class="display-5 ms-2 mt-2 glow-text">Password Change</h1>
    <div class="w-50">
        <div class="m-2 p-4 shrinky-box w-100">
            <a onclick="document.getElementById('submit').click();" type="submit" class="btn btn-outline-light glow-hover me-4">Save</a>
        </div>

        <div class="m-2 w-100">
        {{{alert}}}
        </div>

        <div class="m-2 p-2 border w-100">
            <form method="post" autocomplete="off" id="form">
                <label class="form-label" for="password">New Password</label>
                <input class="form-control" type="password" id="password" name="password" value="" required/>
                <label class="form-label" for="password_check">Repeat Password</label>
                <input class="form-control" type="password" id="password_check" name="password_check" value="" required/>
                <input hidden id="submit" type="submit"/>
            </form>
        </div>
    </div>
</div>