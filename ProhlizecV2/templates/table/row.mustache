<tr class="glow-hover-outer-muted" style="cursor: pointer;" onclick="(function() { window.location.href = 'view.php?id={{id}}' })()">
    {{{data}}}
    {{#edit}}
    <td class="text-end">
        <a class="btn btn-outline-light glow-hover-outer-muted link-primary p-0 px-1 me-2" href="edit.php?id={{id}}"><i class="bi bi-pencil-square"></i></a>
        <a class="btn btn-outline-light glow-hover-outer-muted link-danger p-0 px-1 me-2" href="edit.php?mode=delete&id={{id}}" onclick="return confirm('Are you sure you want to delete this record?')"><i class="bi bi-x-lg"></i></a>
    </td>
    {{/edit}}
</tr>