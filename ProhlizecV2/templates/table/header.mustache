<th scope="col">
    <div class="shrinky-box p-2 w-100">
        <span>{{name}}</span>
        <div class="float-end btn-group">
            <a class="btn btn-outline-light glow-hover-outer-muted link-primary p-0 px-1" href="./{{^sort_a}}?sort={{sort_id}}-a{{/sort_a}}">
                <i class="bi bi-caret-down{{#sort_a}}-fill{{/sort_a}}"></i></a>
            <a class="btn btn-outline-light glow-hover-outer-muted link-primary p-0 px-1" href="./{{^sort_d}}?sort={{sort_id}}-d{{/sort_d}}">
                <i class="bi bi-caret-up{{#sort_d}}-fill{{/sort_d}}"></i></a>
        </div>
    </div>
</th>